<%- include ('./base/header.ejs') %>
    <div class="container-fluid">
        <div class="container-fluid my-1">
            <div class="alert bg-warning">
                <h3 class="text-center">Create Records</h3>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <!-- <div class="col"></div> -->
            <div class="col">
                <form action="#" method="POST">
                    <div class="field my-1">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" placeholder="Enter your name" class="form-control">
                    </div>

                    <div class="field my-3">
                        <label for="name" class="form-label">Email</label>
                        <input type="email" name="email" placeholder="Enter your E-mail" class="form-control">
                    </div>

                    <div class="field my-3">
                        <label for="name" class="form-label">Contact Info.</label>
                        <input type="phone" name="contact" placeholder="Enter your Cell Ph." class="form-control">
                    </div>

                    <div class="field my-3">
                        <label for="name" class="form-label">City</label>
                        <input type="text" name="city_name" placeholder="Enter your City name" class="form-control">
                    </div>
                    <input type="submit" value="Submit" class="btn btn-warning">
                </form>
            </div>
            <!-- <div class="col"></div> -->
        </div>
    </div>
<%- include ('./base/footer.ejs') %>